<!DOCTYPE html>
<html lang="en">
<%- include('partials/head') %>
<body class="bg-gray-50">
    <%- include('partials/nav') %>
    <div class="joincreatemeetcontain">
        <div class="form-container">
            <h2>Join meeting</h2>
            <form id="joinMeetingForm">
                <div class="form-group">
                    <input type="text" id="meetingURL" placeholder="Enter Meeting URL" required>
                </div>
                <div class="form-group">
                    <input type="text" id="username" placeholder="Enter Your Name" value="<%= username %>" readonly required>
                </div>
                <div style="display: flex; gap: 1rem;">
                    <button type="button" class="btn btn-outline2">Cancel</button>
                    <button type="submit" class="btn btn-primary">Join</button>
                </div>
            </form>
        </div>
    </div>

    <%- include('partials/footer') %>

  
    <script>
        document.getElementById('joinMeetingForm').addEventListener('submit', function (event) {
            event.preventDefault(); // Prevent the form from submitting normally

            const meetingURL = document.getElementById('meetingURL').value;
            const username = document.getElementById('username').value;

            // Redirect to the meeting URL with session username
            const redirectURL = `${meetingURL}?username=${encodeURIComponent(username)}`;
            window.location.href = redirectURL;
        });
    </script>

<script>
    // Mobile menu functionality
    document.addEventListener('DOMContentLoaded', function() {
        // Initialize Lucide icons
        lucide.createIcons();

        // Mobile menu toggle
        const mobileMenuButton = document.querySelector('.mobile-menu-button');
        const mobileMenu = document.querySelector('.mobile-menu');

        if (mobileMenuButton && mobileMenu) {
            mobileMenuButton.addEventListener('click', function() {
                mobileMenu.classList.toggle('hidden');
            });
        }
    });

    feather.replace();
</script>
</body>
</html>


