<!DOCTYPE html>
<html lang="en">
<%- include('partials/head') %>
<body class="bg-gray-50">
    <%- include('partials/nav') %>
    <div class="joincreatemeetcontain">
        <div class="form-container">
            <h2>Join meeting</h2>
            <form action="/join-meeting" method="POST">
                <div class="form-group">
                    <input type="text" name="link" class="form-input" placeholder="Meeting Link">
                </div>
                <div class="form-group">
                    <input type="text" name="id" class="form-input" placeholder="Meeting Id Number">
                </div>
                <div class="form-group">
                    <input type="password" name="password" class="form-input" placeholder="Password">
                </div>
                <div style="display: flex; gap: 1rem;">
                    <button type="button" class="btn btn-outline2">Cancel</button>
                    <button type="submit" class="btn btn-primary">Join</button>
                </div>
            </form>
        </div>
    </div>

    <%- include('partials/footer') %>


</body>
</html>


